<resources>

    <style name="TopTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/_12dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TopButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/_48dp</item>
        <item name="android:layout_height">@dimen/_48dp</item>
        <item name="cornerRadius">@dimen/_0dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_61dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">@dimen/_0dp</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="SettingsIconsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/_12dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/search_edit_text_dark</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingLeft">@dimen/_12dp</item>
        <item name="android:paddingRight">@dimen/_12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="SearchClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/search_edit_text_dark</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>
    </style>
</resources>
