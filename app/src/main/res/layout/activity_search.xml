<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/searchReturnButton"
                style="@style/TopButtonStyle"
                app:icon="@drawable/arrowback"
                app:iconGravity="textTop"
                app:iconPadding="@dimen/_0dp" />

            <TextView
                style="@style/TopTextStyle"
                android:text="@string/search"
                android:textSize="26sp" />
        </LinearLayout>

        <Button style="@style/TopButtonStyle" />
    </FrameLayout>

    <LinearLayout
        style="@style/SearchClearButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:layout_marginVertical="@dimen/_16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            style="@style/SearchEditText"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/loupe"
            android:hint="@string/search"
            android:inputType="text"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/searchClearIcon"
            style="@style/SearchClearButton"
            android:paddingRight="@dimen/_8dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
