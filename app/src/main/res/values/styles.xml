<resources>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">12dp</item>
        <item name="navigationIcon">@drawable/arrowback_black</item>
    </style>

    <style name="TopTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackNameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">@dimen/_0dp</item>
    </style>

    <style name="SwitchButtonStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">@dimen/_0dp</item>
        <item name="trackTint">@drawable/selector_switch_tracktint</item>
        <item name="thumbTint">@drawable/selector_switch_thumb</item>
        <item name="android:checked">true</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/search_edit_text</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:drawableTint">@color/light_grey</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="SearchClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/clear_edit_text</item>
        <item name="android:background">@drawable/search_edit_text</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:paddingRight">22dp</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="UpdateButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="MainTrackInfo">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayTrackButton">
        <item name="android:background">@drawable/play_track_button</item>
        <item name="android:src">@drawable/to_play_track</item>
    </style>

    <style name="FunctionTrackButton">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/function_button</item>
    </style>

    <style name="FunctionTrackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabTextColor">@color/black</item>
    </style>

</resources>
