<resources>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">12dp</item>
        <item name="navigationIcon">@drawable/arrowback_black</item>
    </style>

    <style name="TopTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_8dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">@dimen/_0dp</item>
        <item name="android:trackTint">@color/grey</item>
        <item name="android:thumbTint">@color/light_grey</item>
        <item name="android:checked">false</item>
    </style>

    <style name="SearchEditText">
        <item name="android:background">@drawable/search_edit_text</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
        <item name="android:drawableTint">@color/light_grey</item>
        <item name="android:paddingLeft">@dimen/_12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/light_grey</item>
    </style>

    <style name="SearchClearButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/clear_edit_text</item>
        <item name="android:background">@drawable/search_edit_text</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:paddingRight">14dp</item>
    </style>
</resources>
